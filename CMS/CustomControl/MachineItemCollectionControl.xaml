<UserControl x:Class="CMS.MachineItemCollectionControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CMS"
             mc:Ignorable="d"
             d:DataContext="{x:Static local:MachineItemCollectionDesignModel.Instance}">

    <Grid HorizontalAlignment="Center">

        <Grid.RowDefinitions>
            <!--  items labels  -->
            <RowDefinition Height="Auto" />
            <!--  list of items  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  items labels  -->
        <Grid Grid.Row="0" Margin="4,0">
            <Grid.ColumnDefinitions>

                <!--  machine number  -->
                <ColumnDefinition Width="Auto" />
                <!--  machine status  -->
                <ColumnDefinition Width="Auto" />
                <!--  cutter number  -->
                <ColumnDefinition Width="Auto" />
                <!--  part number  -->
                <ColumnDefinition Width="Auto" />
                <!--  count  -->
                <ColumnDefinition Width="Auto" />
                <!--  check result  -->
                <ColumnDefinition Width="Auto" />
                <!--  date and time of last check  -->
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  machine number  -->
            <TextBlock x:Name="MachineIDLabel" Grid.Column="0" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Text="MACHINE-ID" d:Width="80"
                       FontSize="{StaticResource XSmall}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}"
                       TextAlignment="Center" />

            <!--  machine status  -->
            <TextBlock x:Name="MachineStatusLabel" Grid.Column="1" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Text="STATUS" d:Width="60"
                       FontSize="{StaticResource XSmall}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}"
                       TextAlignment="Center" />

            <!--  cutter number  -->
            <TextBlock x:Name="CutterNumberLabel" Grid.Column="2" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Text="CUTTER #" d:Width="80"
                       FontSize="{StaticResource XSmall}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}"
                       TextAlignment="Center" />

            <!--  part number  -->
            <TextBlock x:Name="PartNumberLabel" Grid.Column="3" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Text="PART #" d:Width="80"
                       FontSize="{StaticResource XSmall}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}"
                       TextAlignment="Center" />

            <!--  count  -->
            <TextBlock x:Name="CountLabel" Grid.Column="4" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Text="COUNT" d:Width="60"
                       FontSize="{StaticResource XSmall}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}"
                       TextAlignment="Center" />

            <!--  check result  -->
            <TextBlock x:Name="ResultLabel" Grid.Column="5" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Text="RESULT" d:Width="80"
                       FontSize="{StaticResource XSmall}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}"
                       TextAlignment="Center" />

            <!--  date and time of last check  -->
            <TextBlock x:Name="DateAndTimeStampLabel" Grid.Column="6" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Text="DATE AND TIME" d:Width="160"
                       FontSize="{StaticResource XSmall}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}"
                       TextAlignment="Center" />
        </Grid>

        <!--  list of items  -->
        <ItemsControl x:Name="Items" Grid.Row="1"
                      ItemsSource="{Binding Items}">

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:MachineItemControl Margin="4" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
