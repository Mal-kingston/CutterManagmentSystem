<UserControl x:Class="CutterManagement.UI.Desktop.StatusSettingDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d">

    <Border Width="400" Height="350"
            Padding="10" HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{DynamicResource BackgroundColorBrush1}">

        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                              Opacity="0.25" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <!--  Machine number  -->
                <RowDefinition Height="*" />
                <!--  Machine status  -->
                <RowDefinition Height="*" />
                <!--  Machine status message with date and time [required]  -->
                <RowDefinition Height="2*" />
                <!--  user  -->
                <RowDefinition Height="*" />
                <!--  Cancel and submit button  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Center">

                <StackPanel Orientation="Horizontal">

                    <Label Padding="20,4" HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="{Binding Title, StringFormat=${0} :, FallbackValue=Set status}"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontSize="{StaticResource XLarge}"
                           FontFamily="{StaticResource RobotoFlexRegular}"
                           FontWeight="Bold" />

                    <Label Padding="40,4" HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Content="{Binding Label, FallbackValue=000}"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontSize="{StaticResource XLarge}"
                           FontFamily="{StaticResource RobotoFlexRegular}"
                           FontWeight="Bold" BorderThickness="2"
                           BorderBrush="{DynamicResource BorderColorBrush5}" />
                </StackPanel>
            </Grid>

            <ComboBox Grid.Row="1" Height="35"
                      Margin="5"
                      ItemsSource="{Binding StatusCollection}"
                      SelectedValue="{Binding CurrentStatus, Mode=TwoWay}"
                      SelectedValuePath="Key" DisplayMemberPath="Value" />

            <!--  desgin-time-only  -->
            <d:ComboBox Grid.Row="1" Height="35"
                        Margin="5">
                <ComboBoxItem Content="Is running" IsSelected="True" />
            </d:ComboBox>

            <TextBox Grid.Row="2" Height="100"
                     Margin="5" VerticalContentAlignment="Top"
                     Tag="Comment" AcceptsReturn="True"
                     Style="{StaticResource RegularTextBoxStyle}"
                     Text="{Binding MachineStatusMessage, UpdateSourceTrigger=PropertyChanged}" />

            <ComboBox Grid.Row="3" Height="35"
                      Margin="5"
                      ItemsSource="{Binding UsersCollection, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValue="{Binding User, Mode=TwoWay}"
                      SelectedValuePath="Key" DisplayMemberPath="Value" />

            <!--  desgin-time-only  -->
            <d:ComboBox Grid.Row="3" Height="35"
                        Margin="5">
                <ComboBoxItem Content="Select a user" IsSelected="True" />
            </d:ComboBox>

            <Grid Grid.Row="4" Margin="5">
                <Button Width="130" Height="34"
                        HorizontalAlignment="Left" Content="Cancel"
                        IsCancel="True"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        Style="{StaticResource TransparentButtonStyle}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderColorBrush6}"
                        Command="{Binding CancelCommand}" />
                <Button Width="130" Height="34"
                        HorizontalAlignment="Right" Content="Update"
                        IsDefault="True"
                        BorderBrush="{DynamicResource BorderColorBrush3}"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        BorderThickness="2"
                        Style="{StaticResource TransparentButtonStyle}"
                        Command="{Binding UpdateStatusCommand}" />
            </Grid>
        </Grid>

    </Border>

</UserControl>
