<UserControl x:Class="CutterManagement.UI.Desktop.StatusSettingDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="{DynamicResource BackgroundColorBrush1}"
            Width="400" Height="350" VerticalAlignment="Center"
            HorizontalAlignment="Center" Padding="10">

        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.25" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <!--  Machine number  -->
                <RowDefinition Height="*" />
                <!--  Machine status  -->
                <RowDefinition Height="*" />
                <!--  Machine status message with date and time [required]  -->
                <RowDefinition Height="2*" />
                <!--  user  -->
                <RowDefinition Height="*" />
                <!--  Cancel and submit button  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  message  -->
            <Grid Grid.RowSpan="5" Height="80" Margin="14"
                  Visibility="Collapsed" Panel.ZIndex="10"
                  Background="{Binding IsConfigurationSuccessful, Converter={local:BooleanToColorConverter}, UpdateSourceTrigger=PropertyChanged, FallbackValue=White}">
                <!--  d:Visibility="{Binding ShowMessage, Converter={local:BooleanToVisibilityConverter}}"  -->

                <Grid.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.25" />
                </Grid.Effect>

                <Label Grid.Row="3"
                       Content="{Binding Message}"
                       Margin="4,0" Padding="18,8"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       FontSize="{StaticResource Small}"
                       Foreground="{Binding IsConfigurationSuccessful, UpdateSourceTrigger=PropertyChanged, Converter={local:BooleanToColorConverter}, ConverterParameter=Foreground}"
                       VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />

                <TextBlock Text="{Binding IsConfigurationSuccessful, Converter={local:BooleanToIconConverter}}"
                           Padding="18,8" HorizontalAlignment="Right" VerticalAlignment="Center"
                           FontFamily="{StaticResource RegularIcon}"
                           FontSize="{StaticResource Large}"
                           Foreground="{Binding IsConfigurationSuccessful, UpdateSourceTrigger=PropertyChanged, Converter={local:BooleanToColorConverter}, ConverterParameter=Foreground}" />

            </Grid>

            <Grid Grid.Row="0" HorizontalAlignment="Center">

                <StackPanel Orientation="Horizontal">

                    <Label Content="{Binding Title, StringFormat=${0} :, FallbackValue=Set status}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontSize="{StaticResource XLarge}"
                           FontFamily="{StaticResource RobotoFlexRegular}"
                           FontWeight="Bold" Padding="20,4" />

                    <Label Content="{Binding Label, FallbackValue=000}"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontSize="{StaticResource XLarge}"
                           FontFamily="{StaticResource RobotoFlexRegular}"
                           FontWeight="Bold" Padding="40,4" BorderThickness="2"
                           BorderBrush="{DynamicResource BorderColorBrush5}" />
                </StackPanel>
            </Grid>

            <ComboBox Grid.Row="1" Height="35" Margin="5"
                      ItemsSource="{Binding StatusCollection}"
                      SelectedValue="{Binding CurrentStatus, Mode=TwoWay}"
                      SelectedValuePath="Key" DisplayMemberPath="Value" />

            <!--  desgin-time-only  -->
            <d:ComboBox Grid.Row="1" Height="35" Margin="5">
                <ComboBoxItem Content="Is running" IsSelected="True" />
            </d:ComboBox>

            <TextBox Grid.Row="2" Tag="Comment" VerticalContentAlignment="Top"
                     Margin="5" Height="100" AcceptsReturn="True"
                     Style="{StaticResource RegularTextBoxStyle}"
                     Text="{Binding MachineStatusMessage, UpdateSourceTrigger=PropertyChanged}" />

            <ComboBox Grid.Row="3" Height="35" Margin="5"
                      ItemsSource="{Binding UsersCollection, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValue="{Binding User, Mode=TwoWay}"
                      SelectedValuePath="Key" DisplayMemberPath="Value" />

            <!--  desgin-time-only  -->
            <d:ComboBox Grid.Row="3" Height="35" Margin="5">
                <ComboBoxItem Content="Select a user" IsSelected="True" />
            </d:ComboBox>

            <Grid Grid.Row="4" Margin="5">
                <Button Content="Cancel" IsCancel="True" HorizontalAlignment="Left"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        Style="{StaticResource TransparentButtonStyle}"
                        Height="34" Width="130" BorderThickness="1"
                        BorderBrush="{DynamicResource BorderColorBrush6}"
                        Command="{Binding CancelCommand}" />
                <Button Content="Update" IsDefault="True" HorizontalAlignment="Right"
                        BorderBrush="{DynamicResource BorderColorBrush3}"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        BorderThickness="2" Height="34" Width="130"
                        Style="{StaticResource TransparentButtonStyle}"
                        Command="{Binding UpdateStatusCommand}" />
            </Grid>
        </Grid>

    </Border>

</UserControl>
