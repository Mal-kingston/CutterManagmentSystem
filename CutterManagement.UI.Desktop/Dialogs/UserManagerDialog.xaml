<UserControl x:Class="CutterManagement.UI.Desktop.UserManagerDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d">

    <Border Width="600" Height="360"
            Padding="10" HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{DynamicResource BackgroundColorBrush1}">

        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                              Opacity="0.25" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <!--  Title  -->
                <RowDefinition Height="Auto" />
                <!--  Content  -->
                <RowDefinition Height="*" />
                <!--  Buttons  -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Label Margin="2" HorizontalAlignment="Left"
                       VerticalAlignment="Top" Content="User manager"
                       Foreground="{DynamicResource ForegroundColorBrush3}"
                       FontSize="{StaticResource XLarge}"
                       FontFamily="{StaticResource RobotoFlexRegular}" />

            </Grid>

            <!--  Deactivated users  -->
            <Border Grid.Row="1" Margin="0,10"
                    Padding="0,2,0,0"
                    BorderBrush="{DynamicResource BorderColorBrush6}"
                    BorderThickness="1">

                <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding DeactivatedUser, UpdateSourceTrigger=PropertyChanged}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:DeactivatedUserItem />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <Grid Grid.Row="2" Margin="5">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Width="130"
                        Height="34" HorizontalAlignment="Left"
                        Content="Cancel" IsCancel="True"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        Style="{StaticResource TransparentButtonStyle}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderColorBrush6}"
                        Command="{Binding CancelCommand}" />
                <Button Grid.Column="1" Width="130"
                        Height="34" Margin="8,0"
                        HorizontalAlignment="Left" Content="Delete"
                        IsCancel="True"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        Style="{StaticResource TransparentButtonStyle}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderColorBrush6}"
                        Command="{Binding DeleteUserCommand}" />
                <Button Grid.Column="2" Width="130"
                        Height="34" Margin="8,0,0,0"
                        HorizontalAlignment="Right" Content="Activate"
                        IsDefault="True"
                        BorderBrush="{DynamicResource BorderColorBrush3}"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        BorderThickness="2"
                        Style="{StaticResource TransparentButtonStyle}"
                        Command="{Binding ActivateUserCommand}" />
            </Grid>
        </Grid>

    </Border>

</UserControl>
