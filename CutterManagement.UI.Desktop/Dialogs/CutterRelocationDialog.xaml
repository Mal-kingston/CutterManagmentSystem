<UserControl x:Class="CutterManagement.UI.Desktop.CutterRelocationDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d">

    <Border Width="600" Height="380"
            Padding="10" HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="{DynamicResource BackgroundColorBrush1}">

        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                              Opacity="0.25" />
        </Border.Effect>

        <Grid>

            <Grid.RowDefinitions>
                <!--  dialog icon  -->
                <RowDefinition Height="Auto" />
                <!--  content  -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  dialog icon  -->
            <Grid Grid.Row="0" Margin="0,20"
                  HorizontalAlignment="Center">

                <TextBlock Grid.Row="0" HorizontalAlignment="Center"
                           VerticalAlignment="Center" Focusable="False"
                           Text="{StaticResource CutterRelocationIcon}"
                           FontSize="{StaticResource BillBoard}"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontFamily="{StaticResource LightIcon}" />
            </Grid>

            <!--  content  -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <local:CutterRelocationControl Grid.Column="0" Height="35"
                                                   Margin="5" />

                    <TextBlock Grid.Column="1" Margin="20,0"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Focusable="False"
                               Text="{StaticResource ArrowIcon}"
                               FontSize="{StaticResource XLarge}"
                               Foreground="{DynamicResource ForegroundColorBrush3}"
                               FontFamily="{StaticResource SolidIcon}" />

                    <ComboBox Grid.Column="2" Height="35"
                              Margin="5,0"
                              ItemsSource="{Binding MachineCollection, UpdateSourceTrigger=PropertyChanged}"
                              SelectedValue="{Binding SelectedMachine, Mode=TwoWay}"
                              SelectedValuePath="Key" DisplayMemberPath="Value" />

                    <!--  desgin-time-only  -->
                    <d:ComboBox Grid.Column="2" Height="35"
                                Margin="5,0">
                        <d:ComboBoxItem Content="Select Machine" IsSelected="True" />
                    </d:ComboBox>

                </Grid>

                <TextBox Grid.Row="2" Margin="5"
                         VerticalContentAlignment="Top" Tag="Comment"
                         AcceptsReturn="True"
                         Style="{StaticResource RegularTextBoxStyle}"
                         Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" />

                <ComboBox Grid.Row="3" Height="35"
                          Margin="5"
                          ItemsSource="{Binding UserCollection, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValue="{Binding User, Mode=TwoWay}"
                          SelectedValuePath="Key" DisplayMemberPath="Value" />

                <!--  desgin-time-only  -->
                <d:ComboBox Grid.Row="3" Height="35"
                            Margin="5">
                    <d:ComboBoxItem Content="Select a user" IsSelected="True" />
                </d:ComboBox>

                <Grid Grid.Row="4" Margin="5">
                    <Button Width="130" Height="34"
                            HorizontalAlignment="Left" Content="Cancel"
                            IsCancel="True"
                            FontFamily="{StaticResource RobotoFlexRegular}"
                            FontSize="{StaticResource XSmall}"
                            Style="{StaticResource TransparentButtonStyle}"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource BorderColorBrush6}"
                            Command="{Binding CancelCommand}" />
                    <Button Width="130" Height="34"
                            HorizontalAlignment="Right" Content="Relocate"
                            IsDefault="True"
                            BorderBrush="{DynamicResource BorderColorBrush3}"
                            FontFamily="{StaticResource RobotoFlexRegular}"
                            FontSize="{StaticResource XSmall}"
                            BorderThickness="2"
                            Style="{StaticResource TransparentButtonStyle}"
                            Command="{Binding RelocateCutterCommand}" />
                </Grid>

            </Grid>
        </Grid>
    </Border>
</UserControl>
