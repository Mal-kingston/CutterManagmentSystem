<UserControl x:Class="CutterManagement.UI.Desktop.CreateUserDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d">

    <Border Width="400" Height="360"
            Padding="10" HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{DynamicResource BackgroundColorBrush1}">

        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                              Opacity="0.25" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <!--  Form logo  -->
                <RowDefinition Height="2*" />
                <!--  First name  -->
                <RowDefinition Height="*" />
                <!--  Last name  -->
                <RowDefinition Height="*" />
                <!--  Shift  -->
                <RowDefinition Height="*" />
                <!--  Buttons  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Center">

                <StackPanel Orientation="Horizontal">

                    <Label Padding="20" HorizontalAlignment="Center"
                           VerticalAlignment="Center" Content="user"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontSize="{StaticResource BillBoard}"
                           FontFamily="{StaticResource RegularIcon}" />

                </StackPanel>
            </Grid>

            <local:TextEntryControl Grid.Row="1" PlaceHolderText="Firstname"
                                    ControlContent="{Binding FirstName, Mode=TwoWay}" />

            <local:TextEntryControl Grid.Row="2" PlaceHolderText="Lastname"
                                    Focusable="False"
                                    ControlContent="{Binding LastName, Mode=TwoWay}" />

            <ComboBox Grid.Row="3" Height="35"
                      Margin="5"
                      ItemsSource="{Binding UserShiftCollection}"
                      SelectedValue="{Binding NewUserShift, Mode=TwoWay}"
                      SelectedValuePath="Key" DisplayMemberPath="Value" />

            <!--  desgin-time-only  -->
            <d:ComboBox Grid.Row="3" Height="35"
                        Margin="5">
                <ComboBoxItem Content="---" IsSelected="True" />
            </d:ComboBox>


            <Grid Grid.Row="4" Margin="5">
                <Button Width="130" Height="34"
                        HorizontalAlignment="Left" Content="Cancel"
                        IsCancel="True"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        Style="{StaticResource TransparentButtonStyle}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderColorBrush6}"
                        Command="{Binding CancelUserCreationCommand}" />
                <Button Width="130" Height="34"
                        HorizontalAlignment="Right" Content="Create"
                        IsDefault="True"
                        BorderBrush="{DynamicResource BorderColorBrush3}"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        BorderThickness="2"
                        Style="{StaticResource TransparentButtonStyle}"
                        Command="{Binding CreateCommand}" />
            </Grid>
        </Grid>

    </Border>

</UserControl>
