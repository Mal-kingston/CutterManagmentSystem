<UserControl x:Class="CutterManagement.UI.Desktop.AdminLoginDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d">

    <Grid Background="Transparent">
        <Border Background="{DynamicResource BackgroundColorBrush1}"
                Width="300" Height="320" VerticalAlignment="Center"
                HorizontalAlignment="Center" Padding="10">

            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.25" />
            </Border.Effect>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{StaticResource ShieldIcon}"
                           VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"
                           FontSize="{StaticResource BillBoard}"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontFamily="{StaticResource LightIcon}" />

                <TextBlock Grid.Row="0"
                           Text="{Binding SessionStatus, StringFormat=Session status: {0}, UpdateSourceTrigger=PropertyChanged, FallbackValue=Session status: Unavailable}"
                           VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="6,-4"
                           FontSize="{StaticResource XSmall}"
                           Foreground="{Binding IsAdminLoggedIn, Converter={local:BooleanToColorConverter}, ConverterParameter=SessionStatus}"
                           FontFamily="{StaticResource RobotoFlexRegular}" />

                <local:TextEntryControl Grid.Row="1" PlaceHolderText="Username"
                                        PlaceHolderIcon="{StaticResource UsersIcon}"
                                        ControlContent="{Binding Username, Mode=TwoWay}" />

                <local:PasswordEntryControl x:Name="CustomPassWordControl" Grid.Row="2" PlaceHolderText="Password"
                                            PlaceHolderIcon="{StaticResource PasswordIcon}" />

                <!--  error message  -->
                <Label Grid.Row="3" Content="Incorrect username or password" Margin="4,0,4,4"
                       Padding="12,8"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       FontSize="{StaticResource XSmall}"
                       Background="{DynamicResource BackgroundColorBrush6}"
                       Foreground="{DynamicResource ForegroundColorBrush8}"
                       Visibility="{Binding ShowErrorMessage, Converter={local:BooleanToVisibilityConverter}}"
                       d:Visibility="Collapsed" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />

                <!--  success message  -->
                <Grid Grid.RowSpan="5" Height="60" Width="200"
                      d:Visibility="Collapsed"
                      Visibility="{Binding ShowSuccessMessage, Converter={local:BooleanToVisibilityConverter}}"
                      Background="{DynamicResource BackgroundColorBrush1}">

                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.25" />
                    </Grid.Effect>

                    <Label Grid.Row="3" Content="Login successful" Margin="4,0"
                           Padding="18,8"
                           FontFamily="{StaticResource RobotoFlexRegular}"
                           FontSize="{StaticResource Small}"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />

                    <TextBlock Text="{StaticResource CheckMarkIcon}"
                               Padding="18,8" HorizontalAlignment="Right" VerticalAlignment="Center"
                               FontFamily="{StaticResource RegularIcon}"
                               FontSize="{StaticResource Large}"
                               Foreground="{DynamicResource ForegroundColorBrush3}" />

                </Grid>

                <Grid Grid.Row="4" Margin="4">
                    <Button Style="{StaticResource TransparentButtonStyle}"
                            IsCancel="True" HorizontalAlignment="Left" Content="Cancel"
                            Command="{Binding CancelLoginCommand}"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource BorderColorBrush6}"
                            Height="34" Width="130"
                            FontFamily="{StaticResource RobotoFlexRegular}"
                            FontSize="{StaticResource XSmall}" />
                    <Button Style="{StaticResource TransparentButtonStyle}"
                            IsDefault="True" BorderThickness="2"
                            FontFamily="{StaticResource RobotoFlexRegular}"
                            BorderBrush="{DynamicResource BorderColorBrush3}"
                            HorizontalAlignment="Right" Content="Login"
                            Command="{Binding LoginCommand}"
                            Height="34" Width="130"
                            FontSize="{StaticResource XSmall}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:AdminLoginDialog}}}" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
