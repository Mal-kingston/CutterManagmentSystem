<UserControl x:Class="CutterManagement.UI.Desktop.CutterSwapDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>

        <Border Width="800" Height="380"
                Padding="10" HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Background="{DynamicResource BackgroundColorBrush1}">

            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                                  Opacity="0.25" />
            </Border.Effect>

            <Grid>

                <Grid.RowDefinitions>
                    <!--  dialog icon  -->
                    <RowDefinition Height="Auto" />
                    <!--  content  -->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  dialog icon  -->
                <Grid Grid.Row="0" Margin="0,20"
                      HorizontalAlignment="Center">

                    <TextBlock Grid.Row="0" HorizontalAlignment="Center"
                               VerticalAlignment="Center" Focusable="False"
                               Text="{StaticResource CutterSwapIcon}"
                               FontSize="{StaticResource BillBoard}"
                               Foreground="{DynamicResource ForegroundColorBrush3}"
                               FontFamily="{StaticResource LightIcon}" />
                </Grid>

                <!--  content  -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="120" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <local:CutterSwapControl Grid.Column="0" Height="35"
                                                 Margin="5"
                                                 MachineNumber="{Binding FirstMachine.MachineNumber}"
                                                 CutterNumber="{Binding FirstMachine.CutterNumber}"
                                                 PartNumber="{Binding FirstMachine.PartNumber}"
                                                 Count="{Binding FirstMachine.Count}" />

                        <TextBlock Grid.Column="1" Margin="20,0"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Focusable="False"
                                   Text="{StaticResource TwoWayArrowIcon}"
                                   FontSize="{StaticResource XLarge}"
                                   Foreground="{DynamicResource ForegroundColorBrush3}"
                                   FontFamily="{StaticResource SolidIcon}" />

                        <local:CutterSwapControl Grid.Column="2" Height="35"
                                                 Margin="5"
                                                 MachineNumber="{Binding SecondMachine.MachineNumber}"
                                                 CutterNumber="{Binding SecondMachine.CutterNumber}"
                                                 PartNumber="{Binding SecondMachine.PartNumber}"
                                                 Count="{Binding SecondMachine.Count}" />

                    </Grid>

                    <TextBox Grid.Row="2" Margin="5"
                             VerticalContentAlignment="Top" Tag="Comment"
                             AcceptsReturn="True"
                             Style="{StaticResource RegularTextBoxStyle}"
                             Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" />

                    <ComboBox Grid.Row="3" Height="35"
                              Margin="5"
                              ItemsSource="{Binding UserCollection, UpdateSourceTrigger=PropertyChanged}"
                              SelectedValue="{Binding User, Mode=TwoWay}"
                              SelectedValuePath="Key" DisplayMemberPath="Value" />

                    <!--  desgin-time-only  -->
                    <d:ComboBox Grid.Row="3" Height="35"
                                Margin="5">
                        <d:ComboBoxItem Content="Select a user" IsSelected="True" />
                    </d:ComboBox>

                    <Grid Grid.Row="4" Margin="5">
                        <Button Width="130" Height="34"
                                HorizontalAlignment="Left" Content="Cancel"
                                IsCancel="True"
                                FontFamily="{StaticResource RobotoFlexRegular}"
                                FontSize="{StaticResource XSmall}"
                                Style="{StaticResource TransparentButtonStyle}"
                                BorderThickness="1"
                                BorderBrush="{DynamicResource BorderColorBrush6}"
                                Command="{Binding CancelCommand}" />
                        <Button Width="130" Height="34"
                                HorizontalAlignment="Right" Content="Swap"
                                IsDefault="True"
                                BorderBrush="{DynamicResource BorderColorBrush3}"
                                FontFamily="{StaticResource RobotoFlexRegular}"
                                FontSize="{StaticResource XSmall}"
                                BorderThickness="2"
                                Style="{StaticResource TransparentButtonStyle}"
                                Command="{Binding SwapCuttersCommand}" />
                    </Grid>

                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
