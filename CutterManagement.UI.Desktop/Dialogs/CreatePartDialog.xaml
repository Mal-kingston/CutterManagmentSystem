<UserControl x:Class="CutterManagement.UI.Desktop.CreatePartDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d">
    <Border Width="400" Height="460"
            Padding="10" HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{DynamicResource BackgroundColorBrush1}">

        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                              Opacity="0.25" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <!--  Form logo  -->
                <RowDefinition Height="2*" />
                <!--  Part number  -->
                <RowDefinition Height="*" />
                <!--  Model number  -->
                <RowDefinition Height="*" />
                <!--  Summary number  -->
                <RowDefinition Height="*" />
                <!--  Teeth count  -->
                <RowDefinition Height="*" />
                <!--  Part kind  -->
                <RowDefinition Height="*" />
                <!--  Buttons  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  message  -->
            <Grid Grid.RowSpan="5" Height="80"
                  Margin="14" Panel.ZIndex="10"
                  d:Visibility="Collapsed"
                  Visibility="{Binding ShowMessage, Converter={local:BooleanToVisibilityConverter}}"
                  Background="{Binding ShowSuccessMessage, Converter={local:BooleanToColorConverter}, UpdateSourceTrigger=PropertyChanged, FallbackValue=White}">

                <Grid.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                                      Opacity="0.25" />
                </Grid.Effect>

                <Label Grid.Row="3" Margin="4,0"
                       Padding="18,8" HorizontalContentAlignment="Left"
                       VerticalContentAlignment="Center"
                       Content="{Binding Message}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       FontSize="{StaticResource Small}"
                       Foreground="{Binding ShowSuccessMessage, UpdateSourceTrigger=PropertyChanged, Converter={local:BooleanToColorConverter}, ConverterParameter=Foreground}" />

                <TextBlock Padding="18,8" HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Text="{Binding ShowSuccessMessage, Converter={local:BooleanToIconConverter}}"
                           FontFamily="{StaticResource RegularIcon}"
                           FontSize="{StaticResource Large}"
                           Foreground="{Binding ShowSuccessMessage, UpdateSourceTrigger=PropertyChanged, Converter={local:BooleanToColorConverter}, ConverterParameter=Foreground}" />

            </Grid>

            <Grid Grid.Row="0" HorizontalAlignment="Center">

                <StackPanel Orientation="Horizontal">

                    <Label Padding="20" HorizontalAlignment="Center"
                           VerticalAlignment="Center" Content="&#xf085;"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontSize="{StaticResource BillBoard}"
                           FontFamily="{StaticResource RegularIcon}" />

                </StackPanel>
            </Grid>

            <local:TextEntryControl Grid.Row="1" PlaceHolderText="Part number"
                                    ControlContent="{Binding PartNumber, Mode=TwoWay}" />

            <local:TextEntryControl Grid.Row="2" PlaceHolderText="Model number"
                                    Focusable="False"
                                    ControlContent="{Binding ModelNumber, Mode=TwoWay}" />

            <local:TextEntryControl Grid.Row="3" PlaceHolderText="Summary number"
                                    Focusable="False"
                                    ControlContent="{Binding SummaryNumber, Mode=TwoWay}" />

            <local:TextEntryControl Grid.Row="4" PlaceHolderText="Number of teeth"
                                    Focusable="False"
                                    ControlContent="{Binding ToothCount, Mode=TwoWay}" />

            <ComboBox Grid.Row="5" Height="35"
                      Margin="5"
                      ItemsSource="{Binding PartKindCollection}"
                      SelectedValue="{Binding Kind, Mode=TwoWay}"
                      SelectedValuePath="Key" DisplayMemberPath="Value" />

            <!--  desgin-time-only  -->
            <d:ComboBox Grid.Row="5" Height="35"
                        Margin="5">
                <ComboBoxItem Content="---" IsSelected="True" />
            </d:ComboBox>


            <Grid Grid.Row="6" Margin="5">
                <Button Width="130" Height="34"
                        HorizontalAlignment="Left" Content="Cancel"
                        IsCancel="True"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        Style="{StaticResource TransparentButtonStyle}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderColorBrush6}"
                        Command="{Binding CancelUserCreationCommand}" />
                <Button Width="130" Height="34"
                        HorizontalAlignment="Right" Content="Create"
                        IsDefault="True"
                        BorderBrush="{DynamicResource BorderColorBrush3}"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        BorderThickness="2"
                        Style="{StaticResource TransparentButtonStyle}"
                        Command="{Binding CreateCommand}" />
            </Grid>
        </Grid>

    </Border>
</UserControl>
