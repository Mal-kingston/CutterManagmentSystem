<UserControl x:Class="CutterManagement.UI.Desktop.MachineSetupDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d">

    <Border Width="400" Height="440"
            Padding="10" HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{DynamicResource BackgroundColorBrush1}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                              Opacity="0.25" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.6*" />
                <!--  Machine number  -->
                <RowDefinition Height="*" />
                <!--  Machine set number  -->
                <RowDefinition Height="*" />
                <!--  Machine status  -->
                <RowDefinition Height="*" />
                <!--  Machine status message with date and time [required]  -->
                <RowDefinition Height="*" />
                <!--  Cancel and submit button  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Center">

                <StackPanel Orientation="Horizontal">

                    <Label Padding="20,4" HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Content="{Binding Title, StringFormat=${0}, FallbackValue=Setup}"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontSize="{StaticResource Large}"
                           FontFamily="{StaticResource RobotoFlexRegular}"
                           FontWeight="Bold" />

                    <Label Padding="40,4" HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Content="{Binding MachineNumber, Mode=TwoWay, FallbackValue=000}"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontSize="{StaticResource Large}"
                           FontFamily="{StaticResource RobotoFlexRegular}"
                           FontWeight="Bold" BorderThickness="2"
                           BorderBrush="{DynamicResource BorderColorBrush5}" />
                </StackPanel>
            </Grid>

            <local:TextEntryControl Grid.Row="1" PlaceHolderText="Enter cutter #"
                                    ControlContent="{Binding CutterNumber, Mode=TwoWay}" />

            <TextBox Grid.Row="2" Margin="4,10"
                     Padding="2" VerticalContentAlignment="Center"
                     IsEnabled="False" Tag="Cutter condition: 0"
                     Style="{StaticResource RegularTextBoxStyle}"
                     Text="{Binding CutterCondition, UpdateSourceTrigger=PropertyChanged}" />

            <TextBox Grid.Row="3" Margin="4,10"
                     Padding="2" VerticalContentAlignment="Center"
                     IsEnabled="False" Tag="Cutter kind"
                     Style="{StaticResource RegularTextBoxStyle}"
                     Text="{Binding CutterType, UpdateSourceTrigger=PropertyChanged}" />

            <ComboBox Grid.Row="4" Height="45"
                      Margin="5"
                      ItemsSource="{Binding PartNumberCollection, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValue="{Binding SelectedPart, Mode=TwoWay}"
                      SelectedValuePath="Key" DisplayMemberPath="Value" />

            <!--  desgin-time-only  -->
            <d:ComboBox Grid.Row="4" Height="45"
                        Margin="5">
                <ComboBoxItem Content="12345678" IsSelected="True" />
            </d:ComboBox>

            <Grid Grid.Row="5" Margin="5">
                <Button Width="130" Height="34"
                        HorizontalAlignment="Left" Content="Cancel"
                        IsCancel="True"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        Style="{StaticResource TransparentButtonStyle}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderColorBrush6}"
                        Command="{Binding CancelCommand}" />
                <Button Width="130" Height="34"
                        HorizontalAlignment="Right" Content="Done"
                        IsDefault="True"
                        IsEnabled="{Binding IsDoneButtonActive}"
                        BorderBrush="{DynamicResource BorderColorBrush3}"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        BorderThickness="2"
                        Style="{StaticResource TransparentButtonStyle}"
                        Command="{Binding SetupMachineCommand}" />
            </Grid>
        </Grid>

    </Border>
</UserControl>
