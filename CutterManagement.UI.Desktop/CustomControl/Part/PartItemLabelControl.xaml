<UserControl x:Class="CutterManagement.UI.Desktop.PartItemLabelControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d" FontWeight="SemiBold">
    <Grid>
        <Grid.ColumnDefinitions>
            <!--  icon  -->
            <ColumnDefinition Width="120" />
            <!--  part #  -->
            <ColumnDefinition Width="Auto" />
            <!--  Summary #  -->
            <ColumnDefinition Width="Auto" />
            <!--  Model #  -->
            <ColumnDefinition Width="Auto" />
            <!--  teeth count  -->
            <ColumnDefinition Width="Auto" />
            <!--  type of part  -->
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--  icon area  -->
        <Border Grid.Column="0" />

        <TextBlock x:Name="PartNumberLabel" Grid.Column="1" HorizontalAlignment="Stretch"
                   VerticalAlignment="Center" d:Width="80" Text="PART #"
                   FontSize="{StaticResource XSmall}"
                   FontFamily="{StaticResource RobotoFlexRegular}"
                   Foreground="{DynamicResource ForegroundColorBrush3}"
                   TextAlignment="Left" />

        <TextBlock x:Name="SummaryNumberLabel" Grid.Column="2" HorizontalAlignment="Stretch"
                   VerticalAlignment="Center" d:Width="80" Text="SUMMARY #"
                   FontSize="{StaticResource XSmall}"
                   FontFamily="{StaticResource RobotoFlexRegular}"
                   Foreground="{DynamicResource ForegroundColorBrush3}"
                   TextAlignment="Left" />

        <TextBlock x:Name="ModelLabel" Grid.Column="3" HorizontalAlignment="Stretch"
                   VerticalAlignment="Center" d:Width="80" Text="MODEL"
                   FontSize="{StaticResource XSmall}"
                   FontFamily="{StaticResource RobotoFlexRegular}"
                   Foreground="{DynamicResource ForegroundColorBrush3}"
                   TextAlignment="Left" />

        <TextBlock x:Name="TeethCountLabel" Grid.Column="4" HorizontalAlignment="Stretch"
                   VerticalAlignment="Center" d:Width="80" Text="TEETH"
                   FontSize="{StaticResource XSmall}"
                   FontFamily="{StaticResource RobotoFlexRegular}"
                   Foreground="{DynamicResource ForegroundColorBrush3}"
                   TextAlignment="Left" />

        <TextBlock x:Name="TypeLabel" Grid.Column="5" HorizontalAlignment="Stretch"
                   VerticalAlignment="Center" d:Width="80" Text="TYPE"
                   FontSize="{StaticResource XSmall}"
                   FontFamily="{StaticResource RobotoFlexRegular}"
                   Foreground="{DynamicResource ForegroundColorBrush3}"
                   TextAlignment="Left" />
    </Grid>

</UserControl>
