<UserControl x:Class="CutterManagement.UI.Desktop.PartItemControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             Height="48" d:Width="1200"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ItemHoverStyle" TargetType="{x:Type Grid}">
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundColorBrush1}" />
                    <Setter Property="Opacity" Value="0.15" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="MainControl" HorizontalAlignment="Stretch"
          Background="{DynamicResource BackgroundColorBrush1}">

        <!--  dropshadow effect  -->
        <Grid.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                              Opacity="0.12" />
        </Grid.Effect>

        <Grid.ColumnDefinitions>
            <!--  Icon  -->
            <ColumnDefinition Width="Auto" />
            <!--  Part number  -->
            <ColumnDefinition Width="Auto" />
            <!--  Summary  -->
            <ColumnDefinition Width="Auto" />
            <!--  Model  -->
            <ColumnDefinition Width="Auto" />
            <!--  Teeth count  -->
            <ColumnDefinition Width="Auto" />
            <!--  Part kind  -->
            <ColumnDefinition Width="*" />
            <!--  Edit controls  -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  hover effect  -->
        <Grid x:Name="bgPanel" Grid.Column="0"
              Grid.ColumnSpan="10" Panel.ZIndex="4"
              Style="{StaticResource ItemHoverStyle}">
            <Grid.InputBindings>
                <MouseBinding Command="{Binding ResetEditModeCommand}" MouseAction="LeftClick" />
            </Grid.InputBindings>
        </Grid>

        <!--  Icon  -->
        <Border x:Name="Icon" Grid.Column="0"
                Width="120" Padding="20,0">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       Text="&#xe5e9;"
                       FontFamily="{StaticResource LightIcon}"
                       FontSize="{StaticResource Large}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <!--  Part number  -->
        <Border x:Name="PartNumber" Grid.Column="1"
                Width="140">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="1234567890"
                       Text="{Binding PartNumber}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <!--  Summary  -->
        <Border x:Name="SummaryNumber" Grid.Column="2"
                Width="140">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="12345" TextAlignment="Left"
                       Text="{Binding SummaryNumber}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <!--  Model  -->
        <Border x:Name="Model" Grid.Column="3"
                Width="140">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="M100" TextAlignment="Left"
                       Text="{Binding ModelNumber, StringFormat=M{0}}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <!--  Teeth count  -->
        <Border x:Name="TeethCount" Grid.Column="4"
                Width="140" HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="10" TextAlignment="Left"
                       Text="{Binding ToothCount}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <!--  Part kind  -->
        <Border x:Name="PartType" Grid.Column="5">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="Pinion" TextAlignment="Left"
                       Text="{Binding Kind}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <Grid Grid.Column="6" HorizontalAlignment="Right"
              Panel.ZIndex="10"
              Visibility="{Binding IsEditMode, Converter={local:BooleanToVisibilityConverter}}"
              Background="Transparent">

            <StackPanel Margin="8,0" Orientation="Horizontal">
                <Button Width="{Binding RelativeSource={RelativeSource Self}, Path=Height}"
                        Margin="4" IsEnabled="False"
                        Content="{StaticResource EditIcon}"
                        FontFamily="{StaticResource RegularIcon}"
                        FontSize="{StaticResource Small}"
                        Style="{StaticResource MachineOptionsPopupStyle}" />
                <Button Width="{Binding RelativeSource={RelativeSource Self}, Path=Height}"
                        Margin="4"
                        Content="{StaticResource TrashIcon}"
                        FontFamily="{StaticResource RegularIcon}"
                        FontSize="{StaticResource Small}"
                        Foreground="{DynamicResource ForegroundColorBrush5}"
                        Command="{Binding DataContext.DeletePartCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                        Style="{StaticResource MachineOptionsPopupStyle}" />
            </StackPanel>
        </Grid>

        <Border Grid.Column="6" Width="40"
                HorizontalAlignment="Right" Panel.ZIndex="10"
                Visibility="{Binding IsEditMode, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=Invert}"
                Background="Transparent">
            <Button Width="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                    HorizontalContentAlignment="Center"
                    Command="{Binding EnterEditModeCommand}"
                    Content="{StaticResource VerticalEllipsisIcon}"
                    FontFamily="{StaticResource SolidIcon}"
                    Style="{StaticResource MachineItemEditButtonStyle}" />
        </Border>

    </Grid>
</UserControl>
