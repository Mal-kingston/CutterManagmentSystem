<UserControl x:Class="CutterManagement.UI.Desktop.NavigationBarControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             d:DesignHeight="45" d:DesignWidth="1400"
             BorderBrush="{DynamicResource BorderColorBrush2}"
             BorderThickness="0,1" ClipToBounds="True"
             mc:Ignorable="d">

    <Grid Background="{DynamicResource BackgroundColorBrush1}">

        <!--  drop shadow effect  -->
        <Grid.Effect>
            <DropShadowEffect BlurRadius="14" ShadowDepth="8"
                              Direction="275" Opacity="0.1" />
        </Grid.Effect>

        <Grid.ColumnDefinitions>
            <!--  search bar  -->
            <ColumnDefinition Width="*" />
            <!--  app menu  -->
            <ColumnDefinition Width="Auto" />
            <!--  seperator  -->
            <ColumnDefinition Width="Auto" />
            <!--  user profile  -->
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--  search bar  -->
        <Border Grid.Column="0" Width="600"
                Margin="40,6" Padding="0"
                HorizontalAlignment="Left">
            <Grid>
                <TextBox HorizontalAlignment="Stretch" Tag="Search"
                         Style="{StaticResource SearchBarStyle}" />
                <Grid Margin="2" HorizontalAlignment="Right">

                    <Button Width="60"
                            FontSize="{StaticResource XXSmall}"
                            Content="{StaticResource SearchIcon}"
                            FontFamily="{StaticResource RegularIcon}"
                            BorderBrush="{DynamicResource BorderColorBrush6}"
                            BorderThickness="0"
                            Style="{StaticResource TransparentButtonStyle}" />
                </Grid>
            </Grid>
        </Border>

        <!--  app menu  -->
        <StackPanel Grid.Column="1" Panel.ZIndex="1"
                    Orientation="Horizontal">
            <Button x:Name="HomeButton"
                    Command="{Binding NavigateToHomePageCommand}"
                    Content="{StaticResource HomeIcon}"
                    Style="{StaticResource TransparentButtonStyle}" />
            <Button x:Name="UpdatesButton"
                    Command="{Binding NavigateToUpdatesPageCommand}"
                    Content="{StaticResource UpdatesIcon}"
                    Style="{StaticResource TransparentButtonStyle}" />
            <Button x:Name="ArchivesButton"
                    Command="{Binding NavigateToArchivesPageCommand}"
                    Content="{StaticResource ArchivesIcon}"
                    Style="{StaticResource TransparentButtonStyle}" />
            <Button x:Name="UsersButton"
                    Command="{Binding NavigateToUsersPageCommand}"
                    Content="{StaticResource UsersIcon}"
                    Style="{StaticResource TransparentButtonStyle}" />
            <Button x:Name="SettingsButton"
                    Command="{Binding NavigateToSettingsPageCommand}"
                    Content="{StaticResource SettingsIcon}"
                    Style="{StaticResource TransparentButtonStyle}" />
            <Button x:Name="InfoButton"
                    Command="{Binding NavigateToInfoPageCommand}"
                    Content="{StaticResource InfosIcon}"
                    Style="{StaticResource TransparentButtonStyle}" />
        </StackPanel>

        <Canvas Grid.Column="0" Grid.ColumnSpan="4">

            <!--  app menu selection indicator  -->
            <Border x:Name="Indicator" Canvas.Bottom="0"
                    Width="100" Height="2"
                    Margin="0,0,0,2" VerticalAlignment="Bottom"
                    d:Canvas.Left="550"
                    Background="{DynamicResource BackgroundColorBrush7}"
                    Focusable="False" />

        </Canvas>

        <!--  separator  -->
        <Border Grid.Column="2" Width="2"
                Margin="10,4" HorizontalAlignment="Left"
                Background="{DynamicResource BorderColorBrush5}"
                Opacity="0.4" />

        <!--  user profile  -->
        <Border Grid.Column="3" Margin="10,0"
                Padding="0,4">
            <local:UserProfileControl DataContext="{Binding ShiftProfileViewModel}" />
        </Border>
    </Grid>
</UserControl>
