<UserControl x:Class="CutterManagement.UI.Desktop.MachineOptionsPopupControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d" Width="180">
    <Border Padding="8">
        <Border Background="{DynamicResource BackgroundColorBrush1}"
                BorderBrush="{DynamicResource BorderColorBrush1}"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.12" />
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <Button Content="History" Style="{StaticResource MachineOptionsPopupStyle}" />
                <Button Content="Set status" Style="{StaticResource MachineOptionsPopupStyle}" />
                <Button Content="Data swap" Style="{StaticResource MachineOptionsPopupStyle}" />
                <Button Content="Configuration"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        IsEnabled="False" />
            </StackPanel>

        </Border>

    </Border>
</UserControl>
