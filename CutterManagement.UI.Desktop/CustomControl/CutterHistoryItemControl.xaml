<UserControl x:Class="CutterManagement.UI.Desktop.CutterHistoryItemControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             d:DesignWidth="800"
             d:Background="{StaticResource BackgroundColorBrush1}"
             Background="{Binding UseAlternateBackground, Converter={local:BooleanToAlternateColorConverter}}"
             mc:Ignorable="d">

    <Grid Height="35" Margin="14,0"
          VerticalAlignment="Center">

        <Grid Visibility="{Binding IsHeader, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=Invert}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" HorizontalAlignment="Left"
                       VerticalAlignment="Center" d:Text="P10001-10000"
                       Text="{Binding CutterNumber}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />

            <TextBlock Grid.Column="1" HorizontalAlignment="Left"
                       VerticalAlignment="Center" d:Text="502"
                       Text="{Binding MachineNumber}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />

            <TextBlock Grid.Column="2" HorizontalAlignment="Left"
                       VerticalAlignment="Center" d:Text="10001000"
                       Text="{Binding PartNumber}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />

            <TextBlock Grid.Column="3" HorizontalAlignment="Left"
                       VerticalAlignment="Center" d:Text="50"
                       Text="{Binding Count}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />

            <TextBlock Grid.Column="4" HorizontalAlignment="Left"
                       VerticalAlignment="Center" d:Text="n/a"
                       Text="{Binding SizeOfPartTooth}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />

            <TextBlock Grid.Column="5" HorizontalAlignment="Left"
                       VerticalAlignment="Center" d:Text="Passed"
                       Text="{Binding CheckResult}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />

            <TextBlock Grid.Column="6" HorizontalAlignment="Left"
                       VerticalAlignment="Center" d:Text="1st"
                       Text="{Binding Shift}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />

            <TextBlock Grid.Column="7" HorizontalAlignment="Left"
                       VerticalAlignment="Center" d:Text="Malachy Okwute"
                       Text="{Binding UserName}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />

            <TextBlock Grid.Column="8" HorizontalAlignment="Left"
                       VerticalAlignment="Center" d:Text="8-21-2025 ~ 12:16 PM"
                       Text="{Binding DateAndTimeOfCheck}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Grid>


        <Grid d:Visibility="Collapsed" Visibility="{Binding IsHeader, Converter={local:BooleanToVisibilityConverter}}">

            <Border Grid.ColumnSpan="9" HorizontalAlignment="Stretch"
                    VerticalAlignment="Center" BorderThickness="0,1"
                    BorderBrush="{DynamicResource BorderColorBrush5}" />

            <TextBlock Grid.ColumnSpan="9" Padding="20,8"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Background="{DynamicResource BackgroundColorBrush1}"
                       d:Text="8-21-2025 ~ 12:16 PM"
                      Text="{Binding DateAndTimeOfCheck}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Grid>

    </Grid>

</UserControl>
