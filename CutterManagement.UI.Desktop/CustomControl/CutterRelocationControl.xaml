<UserControl x:Class="CutterManagement.UI.Desktop.CutterRelocationControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d">

    <Grid x:Name="MainControl" Background="{DynamicResource BackgroundColorBrush1}">

        <Grid.ColumnDefinitions>
            <!--  machine id #  -->
            <ColumnDefinition Width="Auto" />
            <!--  part number currently being run by this machine  -->
            <ColumnDefinition Width="*" />
            <!--  cutter number  -->
            <ColumnDefinition Width="*" />
            <!--  count  -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  padding around this control  -->
        <Border Grid.ColumnSpan="6" Panel.ZIndex="1"
                d:Padding="14" BorderThickness="1"
                BorderBrush="{DynamicResource BorderColorBrush6}" />

        <!--  machine id #  -->
        <Border x:Name="MachineNumber" Grid.Column="0"
                MinWidth="80" MaxWidth="120"
                HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="123" TextAlignment="Center"
                       Text="{Binding MachineNumber}"
                       FontWeight="Bold"
                       FontSize="{StaticResource Regular}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />

        </Border>

        <!--  part number currently being run by this machine  -->
        <Border x:Name="CurrentRunningPartNumber" Grid.Column="1"
                MinWidth="80" HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="12345678" TextAlignment="Center"
                       Text="{Binding PartNumber}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <!--  current cutter number on this machine  -->
        <Border x:Name="CurrentCutterNumber" Grid.Column="2"
                MinWidth="80" HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="P12345-10000" TextAlignment="Center"
                       Text="{Binding CutterNumber}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <!--  count  -->
        <Border x:Name="ProducedPartCount" Grid.Column="3"
                MinWidth="70" Margin="8,0"
                HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="0" TextAlignment="Center"
                       Text="{Binding Count, UpdateSourceTrigger=PropertyChanged}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

    </Grid>
</UserControl>
