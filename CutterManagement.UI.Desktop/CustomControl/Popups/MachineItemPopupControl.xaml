<UserControl x:Class="CutterManagement.UI.Desktop.MachineItemPopupControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             Width="180" local:FocusAttachedProperty.SetFocus="True"
             Focusable="True" mc:Ignorable="d">
    <Border Padding="8">
        <Border Background="{DynamicResource BackgroundColorBrush1}"
                BorderBrush="{x:Null}"
                BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                                  Opacity="0.25" />
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <Button Content="Remove cutter"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        Focusable="False"
                        Command="{Binding OpenCutterRemovalDialogCommand}" />
                <Button Content="Change part number"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        Focusable="False" />
                <Button Content="Adjust piece count"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        Focusable="False"
                        Command="{Binding PieceCountAdjustmentCommand}" />
                <Button Content="Relocate cutter"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        Focusable="False"
                        Command="{Binding}" />
                <Button Content="Cutter swap"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        Focusable="False"
                        Command="{Binding}" />
                <Button Content="Set machine status"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        Focusable="False"
                        Command="{Binding OpenStatusSettingDialogCommand}" />
                <Button Content="History"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        Focusable="False" />
                <Button Content="Configure" Focusable="False"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        IsEnabled="{Binding IsAdminLoggedIn}"
                        Command="{Binding OpenMachineConfigurationDialogCommand}" />
            </StackPanel>

        </Border>

    </Border>
</UserControl>
