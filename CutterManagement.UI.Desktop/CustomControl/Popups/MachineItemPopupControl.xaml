<UserControl x:Class="CutterManagement.UI.Desktop.MachineItemPopupControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             Width="180" mc:Ignorable="d" Focusable="True"
             local:FocusAttachedProperty.SetFocus="True">
    <Border Padding="8">
        <Border Background="{DynamicResource BackgroundColorBrush1}"
                BorderBrush="{x:Null}"
                BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.25" />
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <Button Content="History"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        Focusable="False" />
                <Button Content="Set status"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        Focusable="False"
                        Command="{Binding OpenStatusSettingDialogCommand}" />
                <Button Content="Data swap"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        Focusable="False"
                        Command="{Binding}" />
                <Button Content="Relocate Data"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        Focusable="False"
                        Command="{Binding}" />
                <Button Content="Configuration" Focusable="False"
                        Style="{StaticResource MachineOptionsPopupStyle}"
                        IsEnabled="{Binding IsAdminLoggedIn}"
                        Command="{Binding OpenMachineConfigurationDialogCommand}" />
            </StackPanel>

        </Border>

    </Border>
</UserControl>
