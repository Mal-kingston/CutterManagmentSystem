<UserControl x:Class="CutterManagement.UI.Desktop.CutterHistoryPopupControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d">

    <Border Width="650" Height="350"
            Padding="8">
        <Border Background="{DynamicResource BackgroundColorBrush1}"
                BorderBrush="{x:Null}"
                BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                                  Opacity="0.25" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <!--  Title  -->
                    <RowDefinition Height="Auto" />
                    <!--  Content  -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">

                    <Label Margin="2" HorizontalAlignment="Left"
                           VerticalAlignment="Top" Content="P10003-10000    Cutter Log"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontSize="{StaticResource XLarge}"
                           FontFamily="{StaticResource RobotoFlexRegular}" />

                </Grid>

                <Border Grid.Row="1" Margin="0,2,0,10"
                        Padding="0,2,0,0"
                        BorderBrush="{DynamicResource BorderColorBrush6}"
                        BorderThickness="0,1">
                    <Grid>

                        <Label Margin="0,10" HorizontalAlignment="Center"
                               VerticalAlignment="Top" d:Visibility="Collapsed"
                               Content="Captured cutter history will appear here"
                               Foreground="{DynamicResource ForegroundColorBrush3}"
                               FontSize="{StaticResource Small}"
                               FontFamily="{StaticResource RobotoFlexRegular}"
                               Visibility="{Binding IsHistoryEmpty}" />

                        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">

                            <ItemsControl x:Name="Items" ItemsSource="{Binding Items, UpdateSourceTrigger=PropertyChanged}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:CutterHistoryItemControl />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </ScrollViewer>

                        <Grid VerticalAlignment="Top" Visibility="Collapsed" Background="{DynamicResource BackgroundColorBrush1}">

                            <Border Grid.ColumnSpan="9" HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center" BorderThickness="0,1"
                                    BorderBrush="{DynamicResource BorderColorBrush5}" />

                            <TextBlock Grid.ColumnSpan="9" Padding="20,8"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Background="{DynamicResource BackgroundColorBrush1}"
                                       Text="8-21-2025 ~ 12:16 PM"
                                       FontFamily="{StaticResource RobotoFlexRegular}"
                                       Foreground="{DynamicResource ForegroundColorBrush3}" />
                        </Grid>

                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>

</UserControl>
