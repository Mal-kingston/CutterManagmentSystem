<UserControl x:Class="CutterManagement.UI.Desktop.NewAdjustmentMoveControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             d:DesignHeight="200" d:DesignWidth="400"
             Background="{DynamicResource BackgroundColorBrush1}"
             mc:Ignorable="d">

    <Grid Grid.Row="0" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="0,5"
                BorderBrush="{DynamicResource BorderColorBrush6}"
                BorderThickness="1">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0" Height="30"
                          Margin="5"
                          ItemsSource="{Binding PartKindCollection}"
                          SelectedValue="{Binding Kind, Mode=TwoWay}"
                          SelectedValuePath="Key" DisplayMemberPath="Value" />

                <!--  desgin-time-only  -->
                <d:ComboBox Grid.Column="0" Height="30"
                            Margin="5">
                    <ComboBoxItem Content="Ring" IsSelected="True" />
                </d:ComboBox>

                <ComboBox Grid.Column="1" Height="30"
                          Margin="5"
                          ItemsSource="{Binding PartNumberCollection, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValue="{Binding SelectedPartNumber, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Key" DisplayMemberPath="Value" />

                <!--  desgin-time-only  -->
                <d:ComboBox Grid.Column="1" Height="30"
                            Margin="5">
                    <ComboBoxItem Content="10002000" IsSelected="True" />
                </d:ComboBox>

            </Grid>
        </Border>


        <Border Grid.Row="1" Margin="0,5"
                BorderBrush="{DynamicResource BorderColorBrush6}"
                BorderThickness="1">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Height="30"
                         HorizontalAlignment="Stretch" VerticalAlignment="Center"
                         local:TextInputAttachedProperty.AllowNumericalValues="True" TextAlignment="Center"
                         Text="{Binding PressureAngleCoast, UpdateSourceTrigger=PropertyChanged}"
                         Tag="pa cv" MaxLength="5"
                         FontFamily="{StaticResource RobotoFlexRegular}"
                         Foreground="{DynamicResource ForegroundColorBrush3}"
                         Style="{StaticResource DataInputTextBoxStyle}" />

                <TextBox Grid.Column="1" Height="30"
                         HorizontalAlignment="Stretch" VerticalAlignment="Center"
                         local:TextInputAttachedProperty.AllowNumericalValues="True" TextAlignment="Center"
                         Text="{Binding PressureAngleDrive, UpdateSourceTrigger=PropertyChanged}"
                         Tag="pa cx" MaxLength="5"
                         FontFamily="{StaticResource RobotoFlexRegular}"
                         Foreground="{DynamicResource ForegroundColorBrush3}"
                         Style="{StaticResource DataInputTextBoxStyle}" />

            </Grid>
        </Border>

        <Border Grid.Row="2" Margin="0,5"
                BorderBrush="{DynamicResource BorderColorBrush6}"
                BorderThickness="1">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Height="30"
                         HorizontalAlignment="Stretch" VerticalAlignment="Center"
                         local:TextInputAttachedProperty.AllowNumericalValues="True" TextAlignment="Center"
                         Text="{Binding SpiralAngleCoast, UpdateSourceTrigger=PropertyChanged}"
                         Tag="sa cv" MaxLength="5"
                         FontFamily="{StaticResource RobotoFlexRegular}"
                         Foreground="{DynamicResource ForegroundColorBrush3}"
                         Style="{StaticResource DataInputTextBoxStyle}" />

                <TextBox Grid.Column="1" Height="30"
                         HorizontalAlignment="Stretch" VerticalAlignment="Center"
                         local:TextInputAttachedProperty.AllowNumericalValues="True" TextAlignment="Center"
                         Text="{Binding SpiralAngleDrive, UpdateSourceTrigger=PropertyChanged}"
                         Tag="sa cx" MaxLength="5"
                         FontFamily="{StaticResource RobotoFlexRegular}"
                         Foreground="{DynamicResource ForegroundColorBrush3}"
                         Style="{StaticResource DataInputTextBoxStyle}" />
            </Grid>
        </Border>


        <Button Grid.Row="3" Width="100"
                Height="30" Margin="0,10,0,0"
                Content="Done"
                BorderBrush="{DynamicResource BorderColorBrush3}"
                FontFamily="{StaticResource RobotoFlexRegular}"
                FontSize="{StaticResource XSmall}"
                BorderThickness="2"
                Style="{StaticResource TransparentButtonStyle}"
                Command="{Binding CloseNewAdjustmentControlCommand}" />


    </Grid>

</UserControl>
