<UserControl x:Class="CutterManagement.UI.Desktop.RippleEffectIndicatorControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Storyboard x:Key="FirstRippleEffect" RepeatBehavior="Forever" Duration="0:0:4">
            <DoubleAnimation To="3" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" Duration="0:0:3">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="3" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" Duration="0:0:3">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="0" Storyboard.TargetProperty="Opacity" Duration="0:0:3" />
        </Storyboard>

        <Storyboard x:Key="SecondRippleEffect" RepeatBehavior="Forever" Duration="0:0:4"
                    BeginTime="0:0:00.6">
            <DoubleAnimation To="3" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" Duration="0:0:3">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="3" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" Duration="0:0:3">
                <DoubleAnimation.EasingFunction>
                    <QuarticEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="0" Storyboard.TargetProperty="Opacity" Duration="0:0:3" />
        </Storyboard>

        <!--  tooltip style  -->
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="Background" Value="{DynamicResource BackgroundColorBrush1}" />
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush3}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush1}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToolTip}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" Padding="20,10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="1" />
                            </Border.Effect>

                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid d:Background="White" Height="40" Width="40"
          ToolTip="{Binding StatusMessage}">

        <Border Width="14" Height="14" HorizontalAlignment="Center"
                VerticalAlignment="Center" BorderThickness="0"
                BorderBrush="{x:Null}"
                Background="{DynamicResource AccentColorBrush3}"
                Opacity="0.6" CornerRadius="10" />
        <Border Width="14" Height="14" HorizontalAlignment="Center"
                VerticalAlignment="Center" BorderThickness="0"
                BorderBrush="{x:Null}"
                Background="{DynamicResource AccentColorBrush3}"
                Opacity="0.4" CornerRadius="10" RenderTransformOrigin="0.5 0.5">

            <Border.RenderTransform>
                <ScaleTransform />
            </Border.RenderTransform>

            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource FirstRippleEffect}" />
                </EventTrigger>
            </Border.Triggers>
        </Border>
        <Border Width="14" Height="14" HorizontalAlignment="Center"
                VerticalAlignment="Center" BorderThickness="0"
                BorderBrush="{x:Null}"
                Background="{DynamicResource AccentColorBrush3}"
                Opacity="0.4" CornerRadius="10" RenderTransformOrigin="0.5 0.5">
            <Border.RenderTransform>
                <ScaleTransform />
            </Border.RenderTransform>

            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource SecondRippleEffect}" />
                </EventTrigger>
            </Border.Triggers>
        </Border>
    </Grid>
</UserControl>
