<UserControl x:Class="CutterManagement.UI.Desktop.DeactivatedUserItem" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             d:Width="200" mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="DeactivatedUserItemStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="Background" Value="{DynamicResource BackgroundColorBrush1}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush6}" />
            <Setter Property="BorderThickness" Value="0,1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">

                            <Grid>
                                <Label Margin="8,0" HorizontalAlignment="Left"
                                       VerticalAlignment="Center" d:Content="John Doe"
                                       Content="{Binding UserFullName}"
                                       Foreground="{DynamicResource ForegroundColorBrush3}" />
                                <CheckBox Margin="8,0" HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          BorderBrush="{DynamicResource BorderColorBrush5}"
                                          IsChecked="{Binding IsSelected}"
                                          Foreground="{DynamicResource ForegroundColorBrush3}" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BackgroundColorBrush2}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ContentControl Height="35" Style="{StaticResource DeactivatedUserItemStyle}" />
</UserControl>
