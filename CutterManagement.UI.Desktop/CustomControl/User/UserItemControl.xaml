<UserControl x:Class="CutterManagement.UI.Desktop.UserItemControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             Height="48" d:Width="1200"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ItemHoverStyle" TargetType="{x:Type Grid}">
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundColorBrush1}" />
                    <Setter Property="Opacity" Value="0.15" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!--<ContentControl />-->
    <Grid x:Name="MainControl" HorizontalAlignment="Stretch"
          Background="{DynamicResource BackgroundColorBrush1}">

        <!--  dropshadow effect  -->
        <Grid.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                              Opacity="0.12" />
        </Grid.Effect>

        <Grid.ColumnDefinitions>
            <!--  User initials  -->
            <ColumnDefinition Width="Auto" />
            <!--  Username  -->
            <ColumnDefinition Width="Auto" />
            <!--  Shift  -->
            <ColumnDefinition Width="*" />
            <!--  Edit controls  -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="bgPanel" Grid.Column="0"
              Grid.ColumnSpan="5" Panel.ZIndex="4"
              Style="{StaticResource ItemHoverStyle}">
            <Grid.InputBindings>
                <MouseBinding Command="{Binding ResetEditModeCommand}" MouseAction="LeftClick" />
            </Grid.InputBindings>
        </Grid>

        <!--  User initials  -->
        <Border x:Name="UserInitials" Grid.Column="0"
                Width="120">

            <Border Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                    Margin="6"
                    CornerRadius="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                    BorderBrush="{DynamicResource BorderColorBrush5}"
                    BorderThickness="3">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                           d:Text="MO"
                           Text="{Binding UserInitials}"
                           FontFamily="{StaticResource RobotoFlexRegular}"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontSize="{StaticResource XXSmall}"
                           FontWeight="Bold" />
            </Border>
        </Border>

        <!--  Username  -->
        <Border x:Name="UserFullName" Grid.Column="1"
                Width="200" HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="Malachy Okwute" TextAlignment="Left"
                       Text="{Binding UserFullName}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <!--  Shift  -->
        <Grid x:Name="Shift" Grid.Column="2"
              HorizontalAlignment="Stretch">
            <TextBlock Margin="10,0" HorizontalAlignment="Stretch"
                       VerticalAlignment="Center" d:Text="1st Shift"
                       TextAlignment="Left"
                       Text="{Binding UserShift}"
                       Visibility="{Binding IsEditMode, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=Invert}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />

            <!--  desgin-time-only  -->
            <d:ComboBox Height="35" HorizontalAlignment="Left">
                <d:ComboBoxItem Content="1st Shift" IsSelected="True" />
            </d:ComboBox>

        </Grid>

        <Border Grid.Column="3" Padding="8,0"
                HorizontalAlignment="Right" Panel.ZIndex="10"
                Visibility="{Binding IsEditMode, Converter={local:BooleanToVisibilityConverter}}"
                Background="Transparent">

            <Button Width="{Binding RelativeSource={RelativeSource Self}, Path=Height}"
                    Margin="4"
                    Content="{StaticResource TrashIcon}"
                    Foreground="{DynamicResource ForegroundColorBrush5}"
                    FontFamily="{StaticResource RegularIcon}"
                    Command="{Binding DataContext.DeactivateUserCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                    CommandParameter="{Binding Id}"
                    Style="{StaticResource MachineOptionsPopupStyle}" />
        </Border>

        <Border Grid.Column="3" Width="60"
                Padding="8,0" HorizontalAlignment="Right"
                Panel.ZIndex="10"
                Visibility="{Binding IsEditMode, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=Invert}"
                Background="Transparent">
            <Button Width="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                    HorizontalContentAlignment="Center"
                    Command="{Binding EnterEditModeCommand}"
                    Content="{StaticResource VerticalEllipsisIcon}"
                    FontFamily="{StaticResource SolidIcon}"
                    Style="{StaticResource MachineItemEditButtonStyle}" />
        </Border>

        <StackPanel Grid.Column="2" Panel.ZIndex="10"
                    Visibility="{Binding IsEditMode, Converter={local:BooleanToVisibilityConverter}}"
                    Background="Transparent" Orientation="Horizontal">

            <ComboBox Height="35" HorizontalAlignment="Left"
                      Background="Transparent"
                      ItemsSource="{Binding DataContext.UserShiftCollection, RelativeSource={RelativeSource AncestorType=Page}, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValue="{Binding DataContext.SelectedUserShift, RelativeSource={RelativeSource AncestorType=Page}, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="Key" DisplayMemberPath="Value" />

            <Button Width="120" Height="35"
                    Margin="20,0" HorizontalAlignment="Left"
                    Content="Save changes"
                    BorderBrush="{DynamicResource BorderColorBrush6}"
                    FontFamily="{StaticResource RobotoFlexRegular}"
                    Command="{Binding DataContext.ChangeUserShiftCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                    Style="{StaticResource MachineOptionsPopupStyle}" />

        </StackPanel>

    </Grid>

</UserControl>
