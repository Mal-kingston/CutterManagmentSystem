<UserControl x:Class="CutterManagement.UI.Desktop.CreateUserFormControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d">

    <Border Background="{DynamicResource BackgroundColorBrush1}"
            Width="400" Height="360" VerticalAlignment="Center"
            HorizontalAlignment="Center" Padding="10">

        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.25" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <!--  Form logo  -->
                <RowDefinition Height="2*" />
                <!--  First name  -->
                <RowDefinition Height="*" />
                <!--  Last name  -->
                <RowDefinition Height="*" />
                <!--  Shift  -->
                <RowDefinition Height="*" />
                <!--  Buttons  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  message  -->
            <Grid Grid.RowSpan="5" Height="80" Margin="14"
                  d:Visibility="Collapsed" Panel.ZIndex="10"
                  Visibility="{Binding ShowMessage, Converter={local:BooleanToVisibilityConverter}}"
                  Background="{Binding ShowSuccessMessage, Converter={local:BooleanToColorConverter}, UpdateSourceTrigger=PropertyChanged, FallbackValue=White}">

                <Grid.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.25" />
                </Grid.Effect>

                <Label Grid.Row="3"
                       Content="{Binding Message}"
                       Margin="4,0" Padding="18,8"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       FontSize="{StaticResource Small}"
                       Foreground="{Binding ShowSuccessMessage, UpdateSourceTrigger=PropertyChanged, Converter={local:BooleanToColorConverter}, ConverterParameter=Foreground}"
                       VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />

                <TextBlock Text="{Binding ShowSuccessMessage, Converter={local:BooleanToIconConverter}}"
                           Padding="18,8" HorizontalAlignment="Right" VerticalAlignment="Center"
                           FontFamily="{StaticResource RegularIcon}"
                           FontSize="{StaticResource Large}"
                           Foreground="{Binding ShowSuccessMessage, UpdateSourceTrigger=PropertyChanged, Converter={local:BooleanToColorConverter}, ConverterParameter=Foreground}" />

            </Grid>

            <Grid Grid.Row="0" HorizontalAlignment="Center">

                <StackPanel Orientation="Horizontal">

                    <Label Content="user" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           FontSize="{StaticResource BillBoard}"
                           FontFamily="{StaticResource RegularIcon}"
                           Padding="20" />

                </StackPanel>
            </Grid>

            <local:TextEntryControl Grid.Row="1" PlaceHolderText="Firstname"
                                    ControlContent="{Binding FirstName, Mode=TwoWay}" />

            <local:TextEntryControl Grid.Row="2" PlaceHolderText="Lastname" Focusable="False"
                                    ControlContent="{Binding LastName, Mode=TwoWay}" />

            <ComboBox Grid.Row="3" Height="35" Margin="5"
                      ItemsSource="{Binding UserShiftCollection}"
                      SelectedValue="{Binding NewUserShift, Mode=TwoWay}"
                      SelectedValuePath="Key" DisplayMemberPath="Value" />

            <!--  desgin-time-only  -->
            <d:ComboBox Grid.Row="3" Height="35" Margin="5">
                <ComboBoxItem Content="---" IsSelected="True" />
            </d:ComboBox>


            <Grid Grid.Row="4" Margin="5">
                <Button Content="Cancel" IsCancel="True" HorizontalAlignment="Left"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        Style="{StaticResource TransparentButtonStyle}"
                        Height="34" Width="130" BorderThickness="1"
                        BorderBrush="{DynamicResource BorderColorBrush6}"
                        Command="{Binding CancelUserCreationCommand}" />
                <Button Content="Create" IsDefault="True" HorizontalAlignment="Right"
                        BorderBrush="{DynamicResource BorderColorBrush3}"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        BorderThickness="2" Height="34" Width="130"
                        Style="{StaticResource TransparentButtonStyle}"
                        Command="{Binding CreateCommand}" />
            </Grid>
        </Grid>

    </Border>

</UserControl>
