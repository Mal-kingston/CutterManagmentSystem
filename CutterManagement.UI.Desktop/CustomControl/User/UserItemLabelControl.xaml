<UserControl x:Class="CutterManagement.UI.Desktop.UserItemLabelControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d" FontWeight="SemiBold">
    <Grid>
        <Grid.ColumnDefinitions>

            <!--  user initials  -->
            <ColumnDefinition Width="Auto" />
            <!--  user full name  -->
            <ColumnDefinition Width="Auto" />
            <!--  shift  -->
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--  user initials  -->
        <TextBlock x:Name="UserInitialsLabel" Grid.Column="0" HorizontalAlignment="Center"
                   VerticalAlignment="Center" d:Width="80" Text="INITIALS"
                   FontSize="{StaticResource XSmall}"
                   FontFamily="{StaticResource RobotoFlexRegular}"
                   Foreground="{DynamicResource ForegroundColorBrush3}"
                   TextAlignment="Center" />

        <!--  user full name  -->
        <TextBlock x:Name="UserFullNameLabel" Grid.Column="1" HorizontalAlignment="Center"
                   VerticalAlignment="Center" d:Width="60" Text="FULLNAME"
                   FontSize="{StaticResource XSmall}"
                   FontFamily="{StaticResource RobotoFlexRegular}"
                   Foreground="{DynamicResource ForegroundColorBrush3}"
                   TextAlignment="Left" />

        <!--  shift  -->
        <TextBlock x:Name="UserShiftLabel" Grid.Column="2" HorizontalAlignment="Center"
                   VerticalAlignment="Center" d:Width="80" Text="SHIFT"
                   FontSize="{StaticResource XSmall}"
                   FontFamily="{StaticResource RobotoFlexRegular}"
                   Foreground="{DynamicResource ForegroundColorBrush3}"
                   TextAlignment="Left" />
    </Grid>
</UserControl>
