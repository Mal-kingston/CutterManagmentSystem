<UserControl x:Class="CutterManagement.UI.Desktop.FrequencyCheckMachineItem" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
             mc:Ignorable="d">

    <Grid x:Name="MainControl" Background="{DynamicResource BackgroundColorBrush1}">

        <Grid.ColumnDefinitions>
            <!--  machine id #  -->
            <ColumnDefinition Width="Auto" />
            <!--  part number currently being run by this machine  -->
            <ColumnDefinition Width="*" />
            <!--  count  -->
            <ColumnDefinition Width="*" />
            <!--  size  -->
            <ColumnDefinition Width="*" />
            <!--  result of the recently checked part  -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  padding around this control  -->
        <Border Grid.ColumnSpan="5" d:Padding="14"
                Panel.ZIndex="1" BorderThickness="1"
                BorderBrush="{DynamicResource BorderColorBrush6}" />

        <!--  machine id #  -->
        <Border x:Name="MachineNumber" Grid.Column="0"
                MinWidth="80" MaxWidth="120"
                HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="123" TextAlignment="Center"
                       Text="{Binding PartNumber}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />

            <!--<Button Width="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                    d:Content="123"
                    Content="{Binding MachineNumber, UpdateSourceTrigger=PropertyChanged}"
                    BorderThickness="0"
                    BorderBrush="{x:Null}"
                    FontSize="{StaticResource XSmall}"
                    FontFamily="{StaticResource RobotoFlexRegular}"
                    Style="{StaticResource TransparentButtonStyle}"
                    Command="{Binding OpenMachineDialogCommand}" />-->
        </Border>

        <!--  part number currently being run by this machine  -->
        <Border x:Name="CurrentRunningPartNumber" Grid.Column="1"
                MinWidth="80" HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="12345678" TextAlignment="Center"
                       Text="{Binding PartNumber}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <!--  count  -->
        <Border x:Name="ProducedPartCount" Grid.Column="2"
                MinWidth="60" HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="0" TextAlignment="Center"
                       Text="{Binding Count}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <!--  size  -->
        <Border x:Name="PartSize" Grid.Column="3"
                MinWidth="60" HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       d:Text="10" TextAlignment="Center"
                       Text="{Binding Count}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <!--  result of the recently checked part  -->
        <Border x:Name="ResultOfLastPartChecked" Grid.Column="4"
                MinWidth="90" HorizontalAlignment="Stretch"
                Background="{Binding ElementName=FrequencyCheck, Path=Text, Converter={local:FrequencyCheckToColorConverter}}">
            <TextBlock x:Name="FrequencyCheck" HorizontalAlignment="Stretch"
                       VerticalAlignment="Center" d:Text="PASSED"
                       TextAlignment="Center"
                       Text="{Binding FrequencyCheckResult}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush7}" />
        </Border>

    </Grid>
</UserControl>
