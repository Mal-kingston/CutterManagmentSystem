<Page x:Class="CutterManagement.UI.Desktop.ArchivesPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
      Title="ArchivesPage" d:DesignHeight="450" d:DesignWidth="800"
      mc:Ignorable="d">

    <Border Padding="12" Background="{DynamicResource BackgroundColorBrush1}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Margin="6,10" Content="Part Records"
                   Foreground="{DynamicResource ForegroundColorBrush3}"
                   FontFamily="{StaticResource RobotoFlexRegular}"
                   FontSize="{StaticResource XXLarge}"
                   FontWeight="Black" />

            <Grid Grid.Row="1" Height="40">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Width="120" Margin="10,0"
                        Content="Plus" Tag="Add part #"
                        Command="{Binding OpenCreatePartDialogCommand}"
                        Style="{StaticResource TransparentButtonWithTextStyle}" />
                <Button Grid.Column="1" Width="100" Margin="10,0"
                        Content="{StaticResource CubeIcon}"
                        Tag="Manage"
                        Command="{Binding ManageUserCommand}"
                        Style="{StaticResource TransparentButtonWithTextStyle}" />
            </Grid>

            <Grid Grid.Row="2" Margin="0,15,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  label  -->
                <!--<local:UserItemLabelControl x:Name="UserItemLabel" Grid.Row="0"
                                            Margin="10,10" HorizontalAlignment="Stretch" />-->

                <!--  items  -->
                <ScrollViewer Grid.Row="1" Padding="7,0" VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Disabled">

                    <Grid x:Name="ItemsContainer" Margin="0,4">

                        <ItemsControl x:Name="Items" ItemsSource="{Binding PartCollection}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local:PartItemControl Margin="4" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                </ScrollViewer>


                <Border Grid.Row="1" Padding="20"
                        d:Visibility="{Binding IsUserCollectionEmpty, UpdateSourceTrigger=PropertyChanged, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=Invert}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderColorBrush1}"
                        Visibility="{Binding IsPartCollectionEmpty, UpdateSourceTrigger=PropertyChanged, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=Invert}">

                    <TextBlock Padding="20" HorizontalAlignment="Center" VerticalAlignment="Top"
                               Text="No part available"
                               FontFamily="{StaticResource RobotoFlexRegular}"
                               FontSize="{StaticResource XLarge}"
                               Foreground="{DynamicResource ForegroundColorBrush3}" />
                </Border>

            </Grid>

        </Grid>

    </Border>
</Page>
