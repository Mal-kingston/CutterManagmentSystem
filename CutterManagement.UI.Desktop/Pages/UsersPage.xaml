<Page x:Class="CutterManagement.UI.Desktop.UsersPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
      mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersPage">

    <Border Background="{DynamicResource BackgroundColorBrush1}" Padding="12">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Admin control  -->
            <local:AdminLoginControl Grid.Row="0" Grid.RowSpan="3" Panel.ZIndex="10"
                                     Visibility="{Binding IsLoginFormVisible, Converter={local:BooleanToVisibilityConverter}}"
                                     d:Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center" />

            <local:CreateUserFormControl Grid.Row="0" Grid.RowSpan="3" Panel.ZIndex="10"
                                         Visibility="{Binding ShowUserCreationForm, Converter={local:BooleanToVisibilityConverter}}"
                                         d:Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center" />

            <Label Grid.Row="0" Content="Users" Margin="6,10"
                   Foreground="{DynamicResource ForegroundColorBrush3}"
                   FontFamily="{StaticResource RobotoFlexRegular}"
                   FontSize="{StaticResource XXLarge}"
                   FontWeight="Black" />

            <Grid Grid.Row="1" Height="40">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="PlusUser" Tag="Add"
                        Width="100" Margin="10,0"
                        Command="{Binding AddUserCommand}"
                        Style="{StaticResource TransparentButtonWithTextStyle}" />
                <Button Grid.Column="1" Width="100"
                        Content="{StaticResource CubeIcon}"
                        Tag="Manage" Margin="10,0"
                        Command="{Binding ManageUserCommand}"
                        Style="{StaticResource TransparentButtonWithTextStyle}" />
                <Button Grid.Column="3" Width="100"
                        Content="{StaticResource UsersIcon}"
                        Tag="Admin" Margin="10,0"
                        Command="{Binding ShowLoginFormCommand}"
                        Style="{StaticResource TransparentButtonWithTextStyle}" />
            </Grid>

            <Grid Grid.Row="2" Margin="0,15,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  label  -->
                <local:UserItemLabelControl x:Name="UserItemLabel" Grid.Row="0" Margin="10,10"
                                            HorizontalAlignment="Stretch" />

                <!--  items  -->
                <ScrollViewer Grid.Row="1" Padding="7,0" VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Disabled">

                    <Grid x:Name="ItemsContainer" Margin="0,4">

                        <ItemsControl x:Name="Items" ItemsSource="{Binding Users}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local:UserItemControl Margin="4" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                </ScrollViewer>


                <Border Grid.Row="1" Padding="20" BorderThickness="1" BorderBrush="{DynamicResource BorderColorBrush1}">

                    <TextBlock Text="No user available" Padding="20"
                           HorizontalAlignment="Center" VerticalAlignment="Top"
                           FontFamily="{StaticResource RobotoFlexRegular}"
                           FontSize="{StaticResource XLarge}"
                           Foreground="{DynamicResource ForegroundColorBrush3}"
                           Visibility="{Binding IsUserCollectionEmpty, UpdateSourceTrigger=PropertyChanged, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=Invert}" />
                </Border>

            </Grid>

        </Grid>
    </Border>

</Page>
