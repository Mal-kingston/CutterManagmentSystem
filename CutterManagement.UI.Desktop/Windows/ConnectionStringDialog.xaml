<Window x:Class="CutterManagement.UI.Desktop.ConnectionStringDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
        Title="ConnectionStringDialog" Width="800"
        Height="450" local:WindowAttachedProperty.AnimateWindow="True"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderBrush="{DynamicResource BorderColorBrush1}"
                BorderThickness="0,0,0,1">
            <TextBlock Margin="20,10" HorizontalAlignment="Left"
                       VerticalAlignment="Top" Text="Sql server dialog"
                       FontSize="{StaticResource Large}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       Foreground="{DynamicResource ForegroundColorBrush3}" />
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <local:TextEntryControl Grid.Row="0" />
            <local:TextEntryControl Grid.Row="1" />
            <local:TextEntryControl Grid.Row="2" />
            <local:TextEntryControl Grid.Row="3" />
            <local:TextEntryControl Grid.Row="4" />

        </Grid>

        <Grid Grid.Row="2" >
            <Button Width="130" Height="34"
                            HorizontalAlignment="Left"
                            Style="{StaticResource TransparentButtonStyle}"
                            IsCancel="True" Content="Cancel"
                            Command="{Binding CancelLoginCommand}"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource BorderColorBrush6}"
                            FontFamily="{StaticResource RobotoFlexRegular}"
                            FontSize="{StaticResource XSmall}" />
            <Button Width="180" Height="34"
                            HorizontalAlignment="Right"
                            Style="{StaticResource TransparentButtonStyle}"
                            IsDefault="True" BorderThickness="2"
                            FontFamily="{StaticResource RobotoFlexRegular}"
                            BorderBrush="{DynamicResource BorderColorBrush3}"
                            Content="Set connection string"
                            Command="{Binding LoginCommand}"
                            FontSize="{StaticResource XSmall}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:AdminLoginDialog}}}" />
        </Grid>

    </Grid>
</Window>
