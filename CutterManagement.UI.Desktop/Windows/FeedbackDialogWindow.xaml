<Window x:Class="CutterManagement.UI.Desktop.FeedbackDialogWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
        Title="FeedbackDialogWindow" Margin="14"
        WindowStyle="None" WindowState="Normal"
        AllowsTransparency="True" ResizeMode="NoResize"
        Style="{StaticResource DialogWindowStyle}"
        WindowStartupLocation="CenterOwner" mc:Ignorable="d">

    <Border Width="450" Height="180"
            Margin="14"
            Background="{DynamicResource BackgroundColorBrush1}">

        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                              Opacity="0.25" />
        </Border.Effect>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Background="{DynamicResource WarningBackgroundColorBrush}">

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Margin="10,0"
                               Padding="18,8" HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Text="{Binding Message}"
                               TextWrapping="Wrap"
                               FontFamily="{StaticResource RobotoFlexRegular}"
                               FontSize="{StaticResource Small}"
                               LineHeight="20"
                               Foreground="{DynamicResource WarningForegroundColorBrush}" />

                    <TextBlock Grid.Column="1" Margin="10,0"
                               Padding="18,8" HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Text="{StaticResource WarningIcon}"
                               FontFamily="{StaticResource RegularIcon}"
                               FontSize="{StaticResource XXXLarge}"
                               Foreground="{DynamicResource WarningIconForegroundColorBrush}" />

                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Width="120"
                        Height="34" HorizontalAlignment="Left"
                        Content="No" IsCancel="True"
                        Style="{StaticResource TransparentButtonStyle}"
                        BorderBrush="{DynamicResource BorderColorBrush6}"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        BorderThickness="1"
                        Command="{Binding NoButtonCommand}"
                        Visibility="{Binding IsPrompt, Converter={local:BooleanToVisibilityConverter}}" />
                <Button Grid.Column="1" Width="120"
                        Height="34" Content="Ok"
                        IsDefault="True"
                        Style="{StaticResource TransparentButtonStyle}"
                        BorderBrush="{DynamicResource BorderColorBrush3}"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        BorderThickness="2"
                        Command="{Binding OKButtonCommand}"
                        Visibility="{Binding IsPrompt, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=Invert}" />
                <Button Grid.Column="2" Width="120"
                        Height="34" HorizontalAlignment="Right"
                        Content="Yes" IsDefault="True"
                        Style="{StaticResource TransparentButtonStyle}"
                        BorderBrush="{DynamicResource BorderColorBrush3}"
                        FontFamily="{StaticResource RobotoFlexRegular}"
                        FontSize="{StaticResource XSmall}"
                        BorderThickness="2"
                        Command="{Binding YesButtonCommand}"
                        Visibility="{Binding IsPrompt, Converter={local:BooleanToVisibilityConverter}}" />

            </Grid>

        </Grid>

    </Border>

</Window>
