<Window x:Class="CutterManagement.UI.Desktop.AlertDialogWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:CutterManagement.UI.Desktop"
        Title="AlertDialogWindow" Margin="14"
        WindowStyle="None" WindowState="Normal"
        AllowsTransparency="True" ResizeMode="NoResize"
        Style="{StaticResource DialogWindowStyle}"
        WindowStartupLocation="CenterOwner" mc:Ignorable="d">

    <Border Width="400" Height="100"
            Margin="14" Padding="0">

        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0"
                              Opacity="0.25" />
        </Border.Effect>

        <Grid>

            <Grid Background="{Binding IsSuccess, Converter={local:BooleanToColorConverter}, UpdateSourceTrigger=PropertyChanged, FallbackValue=White}">

                <Label Margin="4,0" Padding="18,8"
                       HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                       Content="{Binding Message}"
                       FontFamily="{StaticResource RobotoFlexRegular}"
                       FontSize="{StaticResource Small}"
                       Foreground="{Binding IsSuccess, UpdateSourceTrigger=PropertyChanged, Converter={local:BooleanToColorConverter}, ConverterParameter=Foreground}" />

                <TextBlock Padding="18,8" HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Text="{Binding IsSuccess, Converter={local:BooleanToIconConverter}, UpdateSourceTrigger=PropertyChanged}"
                           FontFamily="{StaticResource RegularIcon}"
                           FontSize="{StaticResource Large}"
                           Foreground="{Binding IsSuccess, UpdateSourceTrigger=PropertyChanged, Converter={local:BooleanToColorConverter}, ConverterParameter=Foreground}" />

            </Grid>

        </Grid>

    </Border>

</Window>
